    FailT,
    QuickCheck,
    array,
    base >=4.14 && <5,
    bech32,
    bytestring,
    cardano-crypto,
    cardano-crypto-class,
    cardano-crypto-wrapper,
    cardano-data,
    cardano-ledger-allegra:{cardano-ledger-allegra, testlib},
    cardano-ledger-alonzo:{cardano-ledger-alonzo, testlib},
