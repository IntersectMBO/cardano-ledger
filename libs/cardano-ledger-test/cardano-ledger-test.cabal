  import:             base, project-config
  hs-source-dirs:     src
  other-modules:
    Data.Group.GrpMap
    Data.Functor.PiecewiseConstant
    Test.Cardano.Ledger.Orphans
  exposed-modules:
    Test.Cardano.Ledger.Alonzo.Tools
    Test.Cardano.Ledger.BaseTypes
