  hs-source-dirs: testlib
  default-language: Haskell2010
  build-depends:
    FailT,
    ImpSpec,
    QuickCheck,
    aeson,
    aeson-pretty,
    base,
    base16-bytestring,
    binary,
    bytestring,
    cardano-crypto-class,
    cardano-crypto-wrapper:{cardano-crypto-wrapper, testlib},
    cardano-ledger-binary:{cardano-ledger-binary, testlib} >=1.5,
    cardano-ledger-byron:{cardano-ledger-byron, testlib},
    cardano-ledger-core,
    cardano-slotting,
    containers,
    cuddle >=0.4,
    deepseq,
    generic-random,
    genvalidity,
    hedgehog-quickcheck,
    heredoc,
    hspec,
    microlens,
    mtl,
    nothunks,
    plutus-ledger-api:{plutus-ledger-api, plutus-ledger-api-testlib},
    primitive,
    quickcheck-transformer,
    random >=1.2,
    small-steps >=1.1,
    text,
    time,
    tree-diff,
    unliftio,
    vector-map:{vector-map, testlib},

library tasty-compat
  import: warnings
  visibility: public
  default-language: Haskell2010
  hs-source-dirs: tasty-compat
  exposed-modules:
    Test.Tasty
    Test.Tasty.HUnit
    Test.Tasty.QuickCheck

  build-depends:
    HUnit,
    QuickCheck,
    base,
    hspec,

executable plutus-debug
  import: warnings, rtsopts
  main-is: PlutusDebug.hs
  hs-source-dirs: app
  other-modules:
    CLI

  default-language: Haskell2010
  build-depends:
    base >=4.18 && <5,
    cardano-ledger-binary,
    cardano-ledger-core,
    optparse-applicative,

