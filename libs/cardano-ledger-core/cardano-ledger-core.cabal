    Cardano.Ledger.State.SnapShots
    Cardano.Ledger.State.Stake
    Cardano.Ledger.State.StakePool
    Cardano.Ledger.State.UTxO

  default-language: Haskell2010
  build-depends:
    FailT,
    aeson >=2,
    base >=4.18 && <5,
    base-deriving-via,
    base16-bytestring,
    base64-bytestring,
    binary,
    bytestring >=0.10 && <0.11.3 || >=0.11.4,
    cardano-crypto,
    cardano-crypto-class ^>=2.2,
    cardano-crypto-praos ^>=2.2,
    cardano-crypto-wrapper,
    cardano-ledger-binary ^>=1.8,
    cardano-ledger-byron,
    cardano-ledger-core:internal,
    cardano-slotting,
    cardano-strict-containers,
    containers,
    data-default >=0.8,
    deepseq,
    groups,
    iproute,
    measures,
    mempack >=0.2,
    microlens,
    mtl,
    non-integral >=1.0,
    nothunks >=0.1.5 && <0.3,
    partial-order,
    plutus-core,
    plutus-ledger-api,
    prettyprinter,
    primitive,
    quiet,
    random,
    scientific,
    serialise,
    small-steps >=1.1,
    text,
    time,
    transformers,
    utf8-string,
    validation-selective,
    vector-map ^>=1.1,

  if flag(asserts)
    ghc-options: -fno-ignore-asserts

library internal
  import: warnings
  build-depends:
    base,
    cardano-ledger-binary,

  exposed-modules:
    Cardano.Ledger.Internal.Era

  other-modules:
    Cardano.Ledger.Internal.Definition.Era

  visibility: public
  hs-source-dirs: internal
  default-language: Haskell2010

